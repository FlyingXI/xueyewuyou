<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_white"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/income_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2016.09.08"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="#f2f0f0"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/income_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="批改张三的数学作业"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/income_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textColor="#f10606"
            android:textSize="18dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            />
    </LinearLayout>




</LinearLayout>