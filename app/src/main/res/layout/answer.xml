<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@android:style/Theme.NoTitleBar">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#0cd6d6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="题目详情"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0cd6d6"
                android:padding="5dp"
                android:src="@drawable/back" />
        </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gray_white"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="单选题"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#c2c1c1"></View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/question"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#c2c1c1"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp">
                <View
                    android:layout_width="3px"
                    android:layout_height="35px"
                    android:background="#13e7d5"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="难度"/>
                <include layout="@layout/star_three"/>
                <View
                    android:layout_width="3px"
                    android:layout_height="35px"
                    android:background="#13e7d5"
                    android:layout_marginLeft="5dp"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="出过"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12次"
                    android:textColor="#42d714"/>
                <View
                    android:layout_width="3px"
                    android:layout_height="35px"
                    android:background="#13e7d5"
                    android:layout_marginLeft="5dp"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正确率"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80%"
                    android:textColor="#d71424"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="#ffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="答案 C"
            android:textColor="#e60808"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#686666"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:text="@string/answer"/>
    </LinearLayout>


</LinearLayout>
