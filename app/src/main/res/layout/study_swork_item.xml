<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_white"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/swork_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市实验中学初一三班"
            android:textSize="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/swork_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语文作业"
            android:textSize="12dp"
            android:textColor="#4ae217"
            />
        <TextView
            android:id="@+id/swork_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50份"
            android:textColor="#4ae217"
            android:textSize="12dp"
            android:layout_marginLeft="30dp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/swork_time_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016.09.29"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/swork_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:00"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/swork_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:descendantFocusability= "blocksDescendants"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:onClick="true"
        android:text="抢单"
        android:background="@drawable/bg_black_blue"
        android:textSize="15dp"/>

</LinearLayout>