<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_white_white"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/hwork_header"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/imagehead"
        android:background="@drawable/bg_white_white"
        android:scaleType="centerInside"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"/>
    <View
        android:layout_width="2px"
        android:layout_height="90dp"
        android:layout_marginLeft="5dp"
        android:background="#979595"></View>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hwork_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京实验中学初一三班"
                />
            <TextView
                android:id="@+id/hwork_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="张三"/>
        </LinearLayout>

        <TextView
            android:id="@+id/hwork_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数学作业"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/hwork_time_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016.09.29"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/hwork_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:00"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/hwork_bt"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="true"
        android:descendantFocusability= "blocksDescendants"
        android:gravity="center"
        android:padding="5dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="5dp"
        android:text="抢单"
        android:background="@drawable/bg_black_blue"
        android:textSize="15dp"/>


    </LinearLayout>


