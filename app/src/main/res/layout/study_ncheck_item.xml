<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_white"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/income_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今日待批改"
        android:textSize="15dp"
        android:textColor="#e40c0c"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="#f2f0f0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_white_white"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/ncheck_header"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/imagehead"
            android:scaleType="centerInside"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"/>
        <View
            android:layout_width="2px"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:background="#979595"></View>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ncheck_school"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京实验中学初一三班"
                    />
                <TextView
                    android:id="@+id/ncheck_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="张三"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/ncheck_sh_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学校作业"/>

                <TextView
                    android:id="@+id/ncheck_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数学"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:id="@+id/ncheck_work_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="电子作业" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    android:id="@+id/ncheck_time_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016.09.29"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/ncheck_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17:00"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:id="@+id/ncheck_bt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:descendantFocusability= "blocksDescendants"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dp"
            android:src="@drawable/go"
            android:background="@drawable/bg_white_white"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="#f2f0f0"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/ncheck_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="¥  10.00"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/ncheck_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="马上批改"
            android:onClick="true"
            android:padding="8dp"
            android:textColor="#ffff"
            android:textSize="18dp"
            android:background="@drawable/bg_black_blue"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            />
    </LinearLayout>




</LinearLayout>